@model ChatWEB.Models.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<h2>Pantalla de Registro</h2>

<div class="row">
    <div class="col-md-12">
        <form action="~/Home/Register" method="post">

            @Html.LabelFor(d => d.Email)
            @Html.TextBoxFor(d => d.Email, "", new { @class = "form-component" })
            @Html.ValidationMessageFor(d => d.Email, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(d => d.Password)
            @Html.PasswordFor(d => d.Password, new { @class = "form-component" })
            @Html.ValidationMessageFor(d => d.Password, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(d => d.ConfirmacionPassword)
            @Html.PasswordFor(d => d.ConfirmacionPassword, new { @class = "form-component" })
            @Html.ValidationMessageFor(d => d.ConfirmacionPassword, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(d => d.Name)
            @Html.TextBoxFor(d => d.Name, "", new { @class = "form-component" })
            @Html.ValidationMessageFor(d => d.Name, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(d => d.City)
            @Html.TextBoxFor(d => d.City, "", new { @class = "form-component" })
            @Html.ValidationMessageFor(d => d.City, "", new { @class = "text-danger" })
            <br />
            <button type="submit"> Guardar </button>

        </form>
    </div>
</div>

