@model ChatWEB.Models.ViewModels.UserAccessViewModel

@{
    ViewBag.Title = "Login";

    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

    string error = (string)ViewBag.error;
}

<h2>Pantalla de Inicio de Session</h2>

<div class="row">
    <div class="col-md-12">
        <div class="text-danger">@error</div>
        <form action="~/Home/Login" method="post">

            @Html.LabelFor(d => d.Email)
            @Html.TextBoxFor(d => d.Email, "", new { @class = "form-component" })
            @Html.ValidationMessageFor(d => d.Email, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(d => d.Password)
            @Html.PasswordFor(d => d.Password, new { @class = "form-component" })
            @Html.ValidationMessageFor(d => d.Password, "", new { @class = "text-danger" })

            <br />
            <button type="submit"> Ingresar </button>

        </form>
    </div>
</div>


